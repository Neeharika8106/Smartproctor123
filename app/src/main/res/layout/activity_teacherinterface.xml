<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teacherinterface"
    android:background="@drawable/bg3"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerlayout"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/attendence"
            android:layout_width="130dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:src="@drawable/attend"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/marks"
            android:layout_width="130dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:src="@drawable/marks"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/proctor"
            android:layout_width="140dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:src="@drawable/list_all_students" />

        <ImageView
            android:id="@+id/oatt"
            android:layout_width="130dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:src="@drawable/fee" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/overall"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:src="@drawable/overall" />

        <ImageView
            android:id="@+id/sentmsg"
            android:layout_width="130dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:src="@drawable/phone" />


    </LinearLayout>


</RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigationview"
        app:headerLayout="@layout/header_menu"
        app:menu="@menu/navigation"
        android:layout_gravity="start"
        >

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>